<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context=".fragment.TomorrowWeatherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/weather_name_tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2c2c2c"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:id="@+id/weather_tmax_tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:id="@+id/weather_tmin_tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="40dp"/>

                <ImageView
                    android:id="@+id/weather_image_tomorrow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="13dp"
                    android:textColor="#4170F2"
                    android:layout_margin="20dp"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/weather_name_dayafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2c2c2c"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:id="@+id/weather_tmax_dayafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:id="@+id/weather_tmin_dayafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="40dp"/>

                <ImageView
                    android:id="@+id/weather_image_dayafter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_dayafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#4170F2"
                    android:layout_margin="20dp"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>